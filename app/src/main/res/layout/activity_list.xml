<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:text="时间:"
    android:id="@+id/tv_xx"
    android:textSize="20dp"
    android:layout_alignParentStart="true"
    android:gravity="center_vertical"
    />
<EditText
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:textSize="20dp"
    android:id="@+id/ed_start"
    android:onClick="startTime"
    android:layout_toRightOf="@id/tv_xx"
    android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="到"
        android:id="@+id/tv_dao"
        android:textSize="20dp"
        android:layout_toRightOf="@id/ed_start"
        android:gravity="center_vertical"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/ed_end"
        android:textSize="20dp"
        android:onClick="endTime"
        android:layout_toRightOf="@id/tv_dao"
        android:layout_alignParentTop="true" />
    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/ed_end"
        android:layout_alignParentTop="true"
        android:onClick="sousu"
        android:text="搜索"
        />
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_xx"
        />
</RelativeLayout>
